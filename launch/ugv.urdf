<?xml version="1.0"?>
<robot name="ugv">

  <material name="wheel_mat">
  	<color rgba="0.1 0.1 0.1 1" />
  </material>

  <material name="frame_mat">
  	<color rgba="0.6 0.6 0.6 1" />
  </material>

  <material name="laser_mat">
  	<color rgba="0.0 0.0 1 1" />
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.457 0.457 0.2032" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.1778" />
      <material name="frame_mat" />
    </visual>
  </link>

  <link name="bottom_base">
    <visual>
      <geometry>
        <box size="0.6096 0.457 0.0508" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.1016" />
      <material name="frame_mat" />
    </visual>
  </link>
  
  <link name="laser_mount">
    <visual>
      <geometry>
        <box size="0.254 0.2286 0.0508" />
      </geometry>
      <origin rpy="0 0 0" xyz="0.3302 0 0.3048" />
      <material name="frame_mat" />
    </visual>
  </link>

  <link name="laser">
  	<visual>
  		<geometry>
  			<cylinder length="0.1778" radius="0.05" />
  		</geometry>
  		<origin rpy="0 0 0" xyz="0.0 0.0 0.3124" />
  		<material name="laser_mat" />
  	</visual>
  </link>

  <link name="left_wheel">
  	<visual>
  		<geometry>
  			<cylinder length="0.1" radius="0.165" />
  		</geometry>
  		<origin rpy="1.5708 0 0" xyz="0 -0.2794 0.165" />
  		<material name="wheel_mat" />
  	</visual>
  </link>

  <link name="right_wheel">
  	<visual>
  		<geometry>
  			<cylinder length="0.1" radius="0.165" />
  		</geometry>
  		<origin rpy="1.5708 0 0" xyz="0 0.2794 0.165" />
  		<material name="wheel_mat" />
  	</visual>
  </link>

  <joint name="base_to_laser" type="fixed">
  	<parent link="base_link" />
  	<child link="laser" />
  </joint>

  <joint name="base_to_rightwheel" type="fixed">
  	<parent link="base_link" />
  	<child link="right_wheel" />
  </joint>

  <joint name="base_to_leftwheel" type="fixed">
  	<parent link="base_link" />
  	<child link="left_wheel" />
  </joint>

  <joint name="base_to_bottom" type="fixed">
  	<parent link="base_link" />
  	<child link="bottom_base" />
  </joint>

  <joint name="base_to_lasermount" type="fixed">
  	<parent link="base_link" />
  	<child link="laser_mount" />
  </joint>
</robot>